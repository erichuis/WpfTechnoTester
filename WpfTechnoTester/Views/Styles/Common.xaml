<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Colors-->
    <Color x:Key="ActiveColor">#0398fc</Color>
    <Color x:Key="NonActiveColor">#3003fc</Color>
    
    <!--Brushes-->
    <SolidColorBrush x:Key="ActiveColorBrush" Color="{StaticResource ActiveColor}"/>
    <SolidColorBrush x:Key="NonActiveColorBrush" Color="{StaticResource NonActiveColor}"/>

</ResourceDictionary>