<UserControl x:Class="WpfTechnoTester.Views.UcLabelTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTechnoTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Name="Stacky" Background="LawnGreen" Orientation="Horizontal" FlowDirection="LeftToRight">
        <Label Background="Bisque" Width="100" Name="BaseLabel" VerticalAlignment="Top" Height="24" />
        <TextBox Background="Red" 
                 Width="693" 
                 Name="BaseTextbox"
                 Text="{Binding TextboxText}"
                 VerticalAlignment="Top" Height="24"/>
    </StackPanel>
</UserControl>
